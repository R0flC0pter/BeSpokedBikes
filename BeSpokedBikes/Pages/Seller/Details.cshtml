@page
@model BeSpokedBikes.Pages.Sellers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Salespersons</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salespersons.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salespersons.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salespersons.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salespersons.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salespersons.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salespersons.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salespersons.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salespersons.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salespersons.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salespersons.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salespersons.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salespersons.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salespersons.Manager)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salespersons.Manager)

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salespersons.Sales)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Product Sold</th>
                    <th>Price Sold For</th>
                    <th>Sales Date</th>
                </tr>
                @foreach (var item in Model.Salespersons.Sales)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.PurchasePrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SalesDate)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Salespersons?.SellerID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
