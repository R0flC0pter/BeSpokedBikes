<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sales.ProductID" class="control-label"></label>
                <select asp-for="Sales.ProductID" class ="form-control" asp-items="ViewBag.ProductID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Sales.SellerID" class="control-label"></label>
                <select asp-for="Sales.SellerID" class="form-control" asp-items="ViewBag.SellerID"></select>
